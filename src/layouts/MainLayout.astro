---
import "@/styles/globals.css";
import DarkMode from "@/components/DarkMode.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import LargeSummaryImage from "../images/large-summary.jpg";
import LogoSmall from "../images/logo-786.png";

import "@fontsource-variable/open-sans";

const title = `Austin Rubber Roundup${
  Astro.props.title ? " - " + Astro.props.title : ""
}`;
const description = Astro.props.description
  ? `Feb 23-25, 2024 | ${Astro.props.description}`
  : `Join us Feb 23-25, 2024 for the Austin Rubber Roundup!`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const logo = new URL("/logo-786.png", Astro.site);
---

<html lang="en" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="Description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="site" />
    <meta
      property="og:image"
      content={new URL(LargeSummaryImage.src, Astro.site)}
    />
    <meta property="og:image:width" content={`${LargeSummaryImage.width}`} />
    <meta property="og:image:height" content={`${LargeSummaryImage.height}`} />
    <meta
      property="og:image:alt"
      content="Austin Rubber Roundup Summary Card Image"
    />
    <meta property="og:image" content={new URL(LogoSmall.src, Astro.site)} />
    <meta property="og:image:width" content={`${LogoSmall.width}`} />
    <meta property="og:image:height" content={`${LogoSmall.height}`} />
    <meta property="og:image:alt" content="Austin Rubber Roundup Logo" />
    <meta property="og:site_name" content="ATX Rubber Roundup" />
    <meta property="og:url" content={canonicalURL} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@atxrubberround" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={new URL(LargeSummaryImage.src, Astro.site)}
    />
    <meta
      name="twitter:image:alt"
      content="Austin Rubber Roundup Summary Card Image"
    />

    <DarkMode />

    <slot name="head" />
  </head>
  <body class="flex h-screen flex-col">
    <header class="mr-[calc(0px-var(--scrollbar-width,0))]">
      <Navbar />
    </header>
    <main class="container flex-grow pb-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
